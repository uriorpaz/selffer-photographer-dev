<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "register-form") do |f| %>
  <%= devise_error_messages! %>
  <h3>Sign Up</h3>
  <p class="hint">
     Enter your account details below:
  </p>
  <div class="form-group">
    <label class="control-label visible-ie8 visible-ie9">Email</label>
    <%= f.email_field :email, value: params[:email], autofocus: true, class: "form-control placeholder-no-fix", placeholder: 'Email', autocomplete: "off" %>
  </div>
  <div class="form-group">
    <label class="control-label visible-ie8 visible-ie9">Password</label>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control placeholder-no-fix", id: "register_password", placeholder: "Password" %>
  </div>
  <div class="form-group">
    <label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control placeholder-no-fix", placeholder: "Re-type Your Password" %>
  </div>
  <div class="form-actions">
    <%= link_to 'Back', new_photographer_session_path, class: "btn btn-default", id: "register-back-btn" %>
    <%= f.submit "Sign up", id: "register-submit-btn", class: "btn btn-success uppercase pull-right" %>
  </div>
<% end %>